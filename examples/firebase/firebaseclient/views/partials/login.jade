form(class='navbar-form navbar-right' ng-controller="loginCtrl")
  div(class='form-group')
    input(type='text', placeholder='Email', class='form-control', ng-model='username')
  div(class='form-group')
    input(type='password', placeholder='Password', class='form-control', ng-model='password')
  button(type='submit', class='btn btn-success', ng-click='login()', ng-hide='isAuthenticated') Sign In
  button(type='submit', class='btn', ng-click='signup()' ng-hide='isAuthenticated') Sign Up
  button(type='submit', class='btn btn-success', ng-click='logoff()' ng-show='isAuthenticated') Sign Out